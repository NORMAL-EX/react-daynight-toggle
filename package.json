{
  "name": "react-daynight-toggle",
  "version": "1.0.3",
  "description": "A beautiful day/night theme toggle React component with smooth animations",
  "author": "dddffgg",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NORMAL-EX/react-daynight-toggle.git"
  },
  "homepage": "https://github.com/NORMAL-EX/react-daynight-toggle#readme",
  "bugs": {
    "url": "https://github.com/NORMAL-EX/react-daynight-toggle/issues"
  },
  "main": "./dist/react-day-night-toggle.umd.js",
  "module": "./dist/react-day-night-toggle.es.js",
  "types": "./dist/index.d.ts",
  "style": "./dist/style.css",
  "exports": {
    ".": {
      "import": "./dist/react-day-night-toggle.es.js",
      "require": "./dist/react-day-night-toggle.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/style.css": "./dist/style.css",
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "toggle",
    "theme",
    "dark-mode",
    "light-mode",
    "day-night",
    "switch",
    "component",
    "typescript",
    "animation",
    "ui-component"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build && node build-umd.js",
    "build:es": "tsc -p tsconfig.build.json && vite build",
    "build:umd": "node build-umd.js",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0"
  }
}
